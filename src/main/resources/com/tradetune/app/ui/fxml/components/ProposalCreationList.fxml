<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="background-items" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradetune.app.ui.controller.ProposalCreationController">
    <BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="main-content-background" stylesheets="@../../css/base.css" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
        <top>
            <VBox spacing="20.0" styleClass="header-container">
                <padding>
                    <Insets bottom="20" left="40" right="40" top="30" />
                </padding>

                <Label fx:id="lblTitle" styleClass="section-title" text="TÍTULO SECCIÓN" />

                <TextField fx:id="txtSearch" maxWidth="Infinity" promptText="Buscar por nombre..." styleClass="input-text" />
            </VBox>
        </top>

        <bottom>
            <HBox alignment="CENTER_LEFT" styleClass="footer-container">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="20" />
                </padding>
            <HBox>
               <children>
                      <Button fx:id="btnPrevious" styleClass="btn-secondary" text="Previous" />
                      <Button fx:id="btnNext" styleClass="btn-primary-small" text="Next" />
               </children>
            </HBox>
                <Button fx:id="btnCancel" alignment="CENTER" styleClass="btn-secondary" text="Cancel" />
            </HBox>
        </bottom>
        <center>
            <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
        </center>

    </BorderPane>
</AnchorPane>
