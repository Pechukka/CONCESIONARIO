<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane styleClass="layout-root" stylesheets="@../../css/base.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" vbarPolicy="AS_NEEDED" BorderPane.alignment="TOP_LEFT">
         <content>
            <VBox spacing="16">
               <padding>
                  <Insets bottom="20" left="26" right="26" top="20" />
               </padding>

               <!-- HEADER -->
               <HBox alignment="CENTER_LEFT" spacing="14">
                  <StackPane minHeight="54" minWidth="54" prefHeight="54" prefWidth="54">
                     <Circle radius="27" styleClass="avatar-circle" />

                     <ImageView fitHeight="44" fitWidth="44" pickOnBounds="true" preserveRatio="true" styleClass="avatar-image">
                        <clip>
                           <Circle radius="22" />
                        </clip>
                     </ImageView>

                     <Label styleClass="avatar-icon" text="ðŸ‘¤" />
                  </StackPane>

                  <VBox alignment="CENTER_LEFT" spacing="6">
                     <Label styleClass="profile-name" text="Client Name" />
                     <Label styleClass="badge-interested" text="STATUS" />
                  </VBox>

                  <Region HBox.hgrow="ALWAYS" />
               </HBox>

               <Separator styleClass="section-separator" />

               <!-- PERSONAL DETAILS -->
               <VBox spacing="8">
                  <Label styleClass="form-section-title" text="PERSONAL DETAILS" />

                  <GridPane hgap="18" vgap="12">
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                     </columnConstraints>

                     <StackPane styleClass="field-stack" GridPane.columnIndex="0">
                        <TextField editable="false" focusTraversable="false" promptText="Value" styleClass="input-text" />
                        <Label styleClass="field-overlay-label" text="ID Number" StackPane.alignment="TOP_LEFT" />
                     </StackPane>

                     <StackPane styleClass="field-stack" GridPane.columnIndex="1">
                        <TextField editable="false" focusTraversable="false" promptText="Value" styleClass="input-text" />
                        <Label styleClass="field-overlay-label" text="Date of Birth" StackPane.alignment="TOP_LEFT" />
                     </StackPane>
                     <rowConstraints>
                        <RowConstraints />
                     </rowConstraints>
                  </GridPane>
               </VBox>

               <!-- CONTACT -->
               <VBox spacing="8">
                  <Label styleClass="form-section-title" text="CONTACT" />

                  <GridPane hgap="18" vgap="12">
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                     </columnConstraints>

                     <StackPane styleClass="field-stack" GridPane.columnIndex="0">
                        <TextField editable="false" focusTraversable="false" promptText="Value" styleClass="input-text" />
                        <Label styleClass="field-overlay-label" text="Phone" StackPane.alignment="TOP_LEFT" />
                     </StackPane>

                     <StackPane styleClass="field-stack" GridPane.columnIndex="1">
                        <TextField editable="false" focusTraversable="false" promptText="Value" styleClass="input-text" />
                        <Label styleClass="field-overlay-label" text="Email" StackPane.alignment="TOP_LEFT" />
                     </StackPane>
                     <rowConstraints>
                        <RowConstraints />
                     </rowConstraints>
                  </GridPane>
               </VBox>

               <!-- INTERESTED VEHICLES (DYNAMIC) -->
               <VBox spacing="8">
                  <Label styleClass="form-section-title" text="INTERESTED VEHICLES" />
                  <VBox fx:id="interestedVehiclesContainer" spacing="10" />
               </VBox>

               <!-- PROPOSAL HISTORY (DYNAMIC) -->
               <VBox spacing="8">
                  <Label styleClass="form-section-title" text="PROPOSAL HISTORY" />
                  <VBox fx:id="proposalHistoryContainer" spacing="10" />
               </VBox>

               <Region VBox.vgrow="ALWAYS" />
            </VBox>
         </content>
      </ScrollPane>
   </center>

   <bottom>
      <HBox alignment="CENTER_RIGHT" styleClass="footer-bar" BorderPane.alignment="CENTER_RIGHT">
         <padding>
            <Insets bottom="20" left="26" right="26" top="12" />
         </padding>
         <Button minHeight="36" minWidth="120" prefHeight="36" styleClass="btn-secondary" text="Close" />
      </HBox>
   </bottom>

</BorderPane>
