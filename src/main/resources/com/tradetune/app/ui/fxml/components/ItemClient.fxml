<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tradetune.app.ui.controller.ItemClientController"
      stylesheets="@../../css/base.css"
      alignment="CENTER_LEFT"
      spacing="20.0"
      styleClass="item-card">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <ImageView fx:id="imgAvatar" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true"
               styleClass="item-image"/>

    <VBox spacing="5.0" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">

        <Label fx:id="lblName" text="NOMBRE APELLIDOS" styleClass="item-title"/>

        <HBox spacing="8.0" alignment="CENTER_LEFT">
            <Label fx:id="lblDni" text="DNI: 00000000X" styleClass="item-subtitle"/>
            <Label text="â€¢" styleClass="item-subtitle"/>
            <Label fx:id="lblPhone" text="Tel: 600 000 000" styleClass="item-subtitle"/>
        </HBox>

        <Label fx:id="lblEmail" text="email@ejemplo.com" styleClass="item-detail"/>
    </VBox>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">

        <Label fx:id="lblStatus" text="Interesado" styleClass="badge-interested"/>

        <Button fx:id="btnViewProfile" text="Ver Ficha" styleClass="btn-secondary"/>
    </HBox>

</HBox>