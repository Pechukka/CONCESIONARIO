<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tradetune.app.ui.controller.SoldVehicleDetailsController"
            stylesheets="@../../css/base.css"
            styleClass="layout-root">

    <top>
        <StackPane styleClass="vehicle-image-frame" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="18" right="20" left="20"/>
            </BorderPane.margin>

            <ImageView fx:id="imgVehicle"
                       pickOnBounds="true"
                       preserveRatio="true"
                       fitHeight="220"
                       styleClass="vehicle-image"/>
        </StackPane>
    </top>

    <center>
        <VBox spacing="14" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" right="20" left="20"/>
            </BorderPane.margin>

            <Label fx:id="lblTitle" text="FORD FOCUS 1.6 TDCI" styleClass="vehicle-title"/>

            <HBox spacing="20">
                <VBox spacing="10">
                    <GridPane hgap="18" vgap="10">
                        <Label text="Marca:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="lblBrand" text="Ford" styleClass="vehicle-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Año:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lblYear" text="2018" styleClass="vehicle-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Kilómetros:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="lblKm" text="120.000 km" styleClass="vehicle-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Combustible:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="lblFuel" text="Diésel" styleClass="vehicle-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <Region minWidth="0" HBox.hgrow="ALWAYS"/>

                <VBox spacing="14">
                    <StackPane alignment="CENTER" styleClass="vehicle-sold-box"
                               minWidth="340" prefWidth="340" maxWidth="340"
                               minHeight="110" prefHeight="110" maxHeight="110">
                        <Label text="VENDIDO" styleClass="vehicle-sold-text"/>
                    </StackPane>

                    <GridPane hgap="18" vgap="10">
                        <Label text="Concesionario:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="lblDealer" text="Madrid Central" styleClass="vehicle-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Días en stock:" styleClass="vehicle-key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lblStockDays" text="45 días" styleClass="vehicle-value-danger" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="18" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" right="20" bottom="18" left="20"/>
            </BorderPane.margin>

            <VBox spacing="10">
                <Label text="Comprador" styleClass="vehicle-buyer-title"/>
                <StackPane alignment="CENTER_LEFT" styleClass="vehicle-buyer-box" prefWidth="360">
                    <Label fx:id="lblBuyerName" text="María López Ruiz" styleClass="vehicle-buyer-name"/>
                </StackPane>
            </VBox>

            <Region minWidth="0" HBox.hgrow="ALWAYS"/>

            <Button text="Cerrar" styleClass="btn-secondary" prefWidth="180"/>
        </HBox>
    </bottom>

</BorderPane>
