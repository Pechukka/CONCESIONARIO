<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<BorderPane styleClass="layout-root"
            stylesheets="@../../css/base.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tradetune.app.ui.controller.RegisterInterestedClientController">

    <center>
        <ScrollPane fx:id="scrollForm"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    pannable="true"
                    vbarPolicy="AS_NEEDED"
                    BorderPane.alignment="TOP_LEFT">
            <content>
                <VBox fx:id="boxContent" spacing="18">
                    <padding>
                        <Insets bottom="22" left="22" right="22" top="22"/>
                    </padding>

                    <!-- DATOS PERSONALES -->
                    <VBox spacing="10">
                        <Label styleClass="form-section-title" text="DATOS PERSONALES"/>
                        <Separator styleClass="section-separator"/>

                        <GridPane hgap="14" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="6" GridPane.columnSpan="2">
                                <Label styleClass="form-section-title" text="Nombre completo *"/>
                                <TextField fx:id="txtFullName" promptText="Nombre y apellidos" styleClass="input-text"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label styleClass="form-section-title" text="DNI/NIE *"/>
                                <TextField fx:id="txtDniNie" promptText="12345678A" styleClass="input-text"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label styleClass="form-section-title" text="Fecha nacimiento"/>
                                <TextField fx:id="txtBirthDate" styleClass="input-text"/>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- DATOS DE CONTACTO -->
                    <VBox spacing="10">
                        <Label styleClass="form-section-title" text="DATOS DE CONTACTO"/>
                        <Separator styleClass="section-separator"/>

                        <GridPane hgap="14" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="6" GridPane.columnIndex="0">
                                <Label styleClass="form-section-title" text="Teléfono *"/>
                                <TextField fx:id="txtPhone" promptText="612 345 678" styleClass="input-text"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="1">
                                <Label styleClass="form-section-title" text="Email *"/>
                                <TextField fx:id="txtEmail" promptText="email@ejemplo.com" styleClass="input-text"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                                <Label styleClass="form-section-title" text="Dirección"/>
                                <TextField fx:id="txtAddress" styleClass="input-text"/>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- INFORMACIÓN DE INTERÉS -->
                    <VBox spacing="10">
                        <Label styleClass="form-section-title" text="INFORMACIÓN DE INTERÉS"/>
                        <Separator styleClass="section-separator"/>

                        <GridPane hgap="14" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                            </columnConstraints>

                            <VBox spacing="6" GridPane.columnSpan="2">
                                <Label styleClass="form-section-title" text="Vehículo de interés"/>
                                <ComboBox fx:id="cmbVehicle" promptText="Seleccionar vehículo..." styleClass="input-text"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label styleClass="form-section-title" text="Presupuesto aproximado (€)"/>
                                <TextField fx:id="txtBudget" styleClass="input-text"/>
                            </VBox>

                            <Region GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                <Label styleClass="form-section-title" text="Notas adicionales"/>
                                <TextArea fx:id="txtNotes"
                                          prefRowCount="3"
                                          promptText="Preferencias, observaciones..."
                                          styleClass="input-text"
                                          wrapText="true"/>
                            </VBox>

                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <HBox fx:id="boxActions" alignment="CENTER_LEFT" spacing="12" styleClass="footer-bar">
                        <Button fx:id="btnRegister" text="Registrar Cliente">
                            <styleClass>
                                <String fx:value="btn-primary"/>
                                <String fx:value="btn-compact"/>
                            </styleClass>
                        </Button>
                        <Button fx:id="btnCancel" minHeight="36" styleClass="btn-secondary" text="Cancelar"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
