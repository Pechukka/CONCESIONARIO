<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tradetune.app.ui.controller.ItemHistoryProposalController"
      stylesheets="@../../css/base.css"
      fx:id="rootBox"
      alignment="CENTER_LEFT"
      spacing="15.0"
      maxWidth="Infinity"
      prefWidth="800.0"
      styleClass="history-row">

    <VBox spacing="4.0" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
        <Label fx:id="lblTitle" text="Propuesta #000 - MARCA MODELO" styleClass="history-title"/>
        <Label fx:id="lblDetails" text="Fecha: DD/MM/AAAA • Precio: 00.000 €" styleClass="history-subtitle"/>
    </VBox>

    <Label fx:id="lblStatus" text="ESTADO" styleClass="history-badge"/>

</HBox>